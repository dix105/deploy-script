# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Set to "development" to use Namecheap Sandbox, or "production" for live.
ENVIRONMENT=development

# =============================================================================
# NAMECHEAP API
# =============================================================================
# Get these from: https://ap.www.namecheap.com/settings/tools/apiaccess/
# For Sandbox: https://www.sandbox.namecheap.com/
NAMECHEAP_API_USER=your_namecheap_username
NAMECHEAP_API_KEY=your_namecheap_api_key
NAMECHEAP_USERNAME=your_namecheap_username
# Your whitelisted IP address (must be IPv4)
NAMECHEAP_CLIENT_IP=your_whitelisted_ip
# Set to "true" to use the default contact info saved in your Namecheap dashboard
# Set to "false" to use the REGISTRANT_* fields below
NAMECHEAP_USE_DEFAULT_CONTACTS=true

# =============================================================================
# GITHUB API (for deployment)
# =============================================================================
# Get from: https://github.com/settings/tokens
# Required scopes: repo (full access)
GITHUB_TOKEN=your_github_token

# =============================================================================
# CLOUDFLARE API
# =============================================================================
# Get from: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Zone:Zone:Edit, Zone:DNS:Edit
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# =============================================================================
# VERCEL API
# =============================================================================
# Get from: https://vercel.com/account/tokens
VERCEL_TOKEN=your_vercel_token
# The Vercel project ID or name to add domains to
VERCEL_PROJECT_ID=your_vercel_project_id
# Optional: Team ID if using a team account
VERCEL_TEAM_ID=

# =============================================================================
# DOMAIN REGISTRATION CONTACT INFO (for Namecheap purchase)
# =============================================================================
# Only required if NAMECHEAP_USE_DEFAULT_CONTACTS=false
REGISTRANT_FIRST_NAME=John
REGISTRANT_LAST_NAME=Doe
REGISTRANT_ADDRESS1=123 Main Street
REGISTRANT_ADDRESS2=
REGISTRANT_CITY=New York
REGISTRANT_STATE_PROVINCE=NY
REGISTRANT_POSTAL_CODE=10001
REGISTRANT_COUNTRY=US
REGISTRANT_PHONE=+1.2125551234
REGISTRANT_EMAIL=john.doe@example.com
